<mvc:View controllerName="coolapp1.coolapp1.controller.course" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	height="100%" displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<Page title="{i18n>COURSE}">
		<content>
			<List headerText="">
				<items>
					<StandardListItem title="Bulldozer course -----> (IN PROGRES)"/>
				</items>
			</List>
			<Table items="{Bulldozercourse>/mydata}">
				<columns>
					<Column width="12em">
						<Text text="Activity"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Mark"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{Bulldozercourse>Activity}" class="sapMTableContentMargin"/>
							<Text text="{Bulldozercourse>Description}"/>
							<Text text="{Bulldozercourse>Mark}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<List headerText="AVALIABLE">
				<items>
					<StandardListItem title="Healthy at work"/>
					<StandardListItem title="Truck course"/>
					<StandardListItem title="Drone course"/>
					<StandardListItem title="Maintenance course"/>
					<StandardListItem title="Safety and security 1"/>
				</items>
			</List>
			<List headerText="LOCKED">
				<items>
					<StandardListItem title="Tractor course"/>
					<StandardListItem title="Safety and security 2"/>
					<StandardListItem title="Manager course"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>