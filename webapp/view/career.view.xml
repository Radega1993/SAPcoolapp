<mvc:View controllerName="coolapp1.coolapp1.controller.career" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	height="100%" displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<Page title="{i18n>CAREER}">
		<content>
			<List headerText="">
				<items>
					<StandardListItem title="CAR LICENSE -----> final mark: 27 ✓✓"/>
				</items>
			</List>
			<Table items="{CarLicense>/mydata}">
				<columns>
					<Column width="12em">
						<Text text="Activity"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Mark"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{CarLicense>Activity}" class="sapMTableContentMargin"/>
							<Text text="{CarLicense>Description}"/>
							<Text text="{CarLicense>Mark}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<List headerText="">
				<items>
					<StandardListItem title="MATERIALS -----> final mark: 32 ✓✓"/>
				</items>
			</List>
			<Table items="{MaterialsCourse>/mydata}">
				<columns>
					<Column width="12em">
						<Text text="Activity"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Mark"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{MaterialsCourse>Activity}" class="sapMTableContentMargin"/>
							<Text text="{MaterialsCourse>Description}"/>
							<Text text="{MaterialsCourse>Mark}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>